<!--
  Commenting automatic activation, because there must only be one of the profiles active and there are two active when we want to build RAP.
  Here, it would not matter, because the properties are overwritten, but in pom-aggregator.xml, it causes too many modules to be included in
  the build process.
  Marco :-)
			<activation>
				<os>
					<name>mac os x</name>
				</os>
			</activation>
-->
			<activation>
				<property>
					<name>client.platform</name>
					<value>mac</value>
				</property>
			</activation>
			<properties>
				<swt.groupId>org.eclipse.swt.carbon</swt.groupId>
				<swt.artifactId>macosx</swt.artifactId>
				<org.nightlabs.eclipse.compatibility.artifactId>org.nightlabs.eclipse.compatibility.rcp</org.nightlabs.eclipse.compatibility.artifactId>
			</properties>
		</profile>
